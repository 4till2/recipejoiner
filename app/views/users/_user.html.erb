<% if local_assigns[:link] %>
  <%= render 'users/user_link', user: user %>
<% else %>
  <%= turbo_frame_tag user do %>
    <div class="flex w-full items-center justify-between my-4 shadow border border-dotted border-gray-900/50 rounded ">
      <div class="p-3">
        <p class="font-bold tracking-wide font-bold text-lg md:text-3xl">
          <%= user.username %>
        </p>
        <div class="flex w-full">
          <% if user.avatar.attached? %>
            <div class="w-1/2 mr-2 mb-2">
              <%= image_tag user.avatar, class: 'w-full' %>
            </div>
          <% end %>
        </div>
        <div class="flex">
          <div class="text-gray-500 grid text-xs">
            <span><%= user.recipes.count %></span>
            <span>Recipes</span>
          </div>
          <span class="border-l mx-2"></span>
          <div class="text-gray-500 grid text-xs">
            <span><%= user.cookbooks.count %></span>
            <span>Cookbooks</span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>