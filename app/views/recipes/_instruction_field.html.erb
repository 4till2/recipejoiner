      <%= f.text_area :body, data: { 'textarea-autogrow-target': "element" }, placeholder: "Mix the flour with ...", class: "block resize-none flex-grow bg-gray-100 text-lg text-gray-700 rounded-md shadow border border-gray-200 outline-none focus:outline-none focus:border-none focus:ring-0 px-3 py-4 w-full" %>
