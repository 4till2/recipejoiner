<% if local_assigns[:link] %>
  <%= render 'recipes/recipe_link', recipe: recipe %>
<% else %>
  <%= turbo_frame_tag recipe do %>
    <div class="flex w-full items-center justify-between my-4 shadow border border-dotted border-gray-900/50 rounded ">
      <div class="p-3 w-full">
        <p class="font-bold tracking-wide font-bold text-lg md:text-3xl">
          <%= recipe.title %>
        </p>
          <div class="my-1 text-gray-500">
            By: <%= link_to recipe.user.username, recipe.user, class: 'text-black font-medium' %>
          </div>
          <div class="flex w-full">
            <% if recipe.image.attached? %>
              <div class="w-1/2 mr-2 mb-2">
                <%= image_tag recipe.image, class: 'w-full' %>
              </div>
            <% end %>
            <div class="grow w-full text-gray-700">
              <%= recipe.description %>
            </div>
          </div>
          <div class="flex">
            <div class="text-gray-500 grid text-xs">
              <span><%= recipe.time %></span>
              <span>Minutes</span>
            </div>
            <span class="border-l mx-2"></span>
            <div class="text-gray-500 grid text-xs">
              <span><%= recipe.servings %></span>
              <span>Servings</span>
            </div>
            <span class="border-l mx-2"></span>
            <div class="text-gray-500 grid text-xs">
              <span><%= recipe.ingredients.count %></span>
              <span>Ingredients</span>
            </div>
            <span class="border-l mx-2"></span>
            <div class="text-gray-500 grid text-xs">
              <span><%= recipe.instructions.count %></span>
              <span>Steps</span>
            </div>
          </div>
      </div>
    </div>
  <% end %>
<% end %>