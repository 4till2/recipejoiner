<%= turbo_frame_tag recipe do %>
  <div class="flex w-full items-center justify-between my-4 shadow border border-dotted border-gray-900/50 rounded ">
    <div class="p-3">
      <p class="font-bold tracking-wide font-bold text-lg md:text-3xl">
        <%= recipe.title %>
      </p>
      <div class="flex">
        <div class="text-gray-600 mt-1 text-sm max-h-24 max-w-24">
          <% if recipe.image.attached? %>
            <%= image_tag recipe.image, class: 'rounded mr-2' %>
          <% end %>
        </div>
        <div class="text-gray-700">
          <%= recipe.description %>
        </div>
      </div>
      <div class="flex">
        <div class="text-gray-500 grid text-xs">
          <span><%= recipe.time %></span>
          <span>Minutes</span>
        </div>
        <span class="border-l mx-2"></span>
        <div class="text-gray-500 grid text-xs">
          <span><%= recipe.servings %></span>
          <span>Servings</span>
        </div>
        <span class="border-l mx-2"></span>
        <div class="text-gray-500 grid text-xs">
          <span><%= recipe.ingredients.count %></span>
          <span>Ingredients</span>
        </div>
        <span class="border-l mx-2"></span>
        <div class="text-gray-500 grid text-xs">
          <span><%= recipe.instructions.count %></span>
          <span>Steps</span>
        </div>
      </div>
    </div>
  </div>
<% end %>