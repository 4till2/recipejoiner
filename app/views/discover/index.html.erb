<div class="mx-auto w-full">

  <% if @recommendations.present? %>
    <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1">Recommended for You</h1>
    <%= render 'shared/collection', items: @recommendations, link: true, horizontal: true, rows: 2 %>
  <% end %>

  <% if @recipes %>
    <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1 mt-12">Recipes</h1>
    <div>
      <%= render 'shared/collection', items: @recipes, small: true, horizontal: true, rows: 1, fallback: true do %>
        <%= link_to 'Create your first Recipe!', new_recipe_path, data: { turbo: false }, class: "rounded-lg p-24 text-center font-semibold border-dashed border border-black text-gray-900 block font-large md:text-md hover:bg-gray-900 hover:text-gray-100 m-4" %>
      <% end %>
    </div>
  <% end %>

  <% if @cookbooks %>
    <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1 mt-12">Cookbooks</h1>
    <div>
      <%= render 'shared/collection', items: @cookbooks, small: true, horizontal: true, rows: 1, fallback: true do %>
        <%= link_to 'Create your first Cookbook!', new_cookbook_path, data: { turbo: false }, class: "rounded-lg p-24 text-center font-semibold border-dashed border border-black text-gray-900 block font-large md:text-md hover:bg-gray-900 hover:text-gray-100 m-4" %>
      <% end %>
    </div>
  <% end %>

  <% if @users.present? %>
    <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1 mt-12">Chefs</h1>
    <%= render 'shared/collection', items: @users, link: true, horizontal: true, rows: 1 %>
  <% end %>

  <% if @subscriptions.present? %>
    <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1 mt-12">Recently Subscribed</h1>
    <%= render 'shared/collection', items: @subscriptions, link: true, horizontal: true, rows: 4 %>
  <% end %>

</div>