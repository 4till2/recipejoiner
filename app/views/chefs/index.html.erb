<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render 'shared/navbar', title: 'Chefs' %>
    <div id="chefs" class="my-3 mx-2">
      <% @chefs.each do |chef| %>
        <%= link_to '/chefs/'+ chef.id.to_s do %>
          <%= render 'chefs/chef', chef: chef%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>