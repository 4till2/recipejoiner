<%= turbo_frame_tag 'subscription_button' do %>
  <% if local_assigns[:subscribable_type].present? && local_assigns[:subscribable_id].present? %>
    <div class="">
      <%= button_to subscription_path(subscribable_id: subscribable_id, subscribable_type: subscribable_type) do %>
        <% if local_assigns[:is_subscribed] %>
          <div class="font-semibold text-gray-300 hover:text-red-300 border border-dashed p-2 rounded">
            Unsubscribe
          </div>
        <% else %>
          <div class="font-semibold text-gray-500 hover:text-green-600 border border-dashed p-2 rounded">
            Subscribe
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
