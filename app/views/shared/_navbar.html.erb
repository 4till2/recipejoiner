<div class="flex w-full justify-between items-center p-3">
  <div class="">
    <h1 class="font-extrabold text-4xl text-gray-800 mb-1"><%= title %></h1>
    <div class="w-full flex items-end text-xs md:text-lg text-gray-600 hover:text-gray-800">
      <div class="pr-3">
        <% if current_page?(:controller => 'recipes') %>
          <div class="text-gray-300 font-semibold">Recipes</div>
        <% else %>
          <%= link_to 'Recipes', recipes_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
      <div class="pr-3">
        <% if current_page?(:controller => 'cookbooks') %>
          <div class="text-gray-300 font-semibold">Cookbooks</div>
        <% else %>
          <%= link_to 'Cookbooks', cookbooks_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
    </div>
  </div>
  <% if title == 'Recipes' %>
    <%= link_to 'New Recipe', new_recipe_path, class: "rounded-lg p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 rotate-3" %>
  <% end %>
  <% if title == 'Cookbooks' %>
    <%= link_to 'New Cookbook', new_cookbook_path, class: "rounded-lg p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 rotate-3" %>
  <% end %>
</div>

