<div class="fixed top-0 right-0 backdrop-blur-md flex w-full justify-between items-center py-2 px-6">
  <div class="">
    <h1 class="font-extrabold text-4xl md:text-6xl text-gray-800 mb-1"><%= controller_name.capitalize  %></h1>
    <div class="w-full flex items-end text-xs md:text-lg text-gray-600 hover:text-gray-800">
      <div class="pr-3">
        <% if current_page?(:controller => 'discover') %>
          <div class="text-gray-300 font-semibold">Discover</div>
        <% else %>
          <%= link_to 'Discover', discover_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
      <div class="pr-3">
        <% if current_page?(:controller => 'recipes') %>
          <div class="text-gray-300 font-semibold">Recipes</div>
        <% else %>
          <%= link_to 'Recipes', recipes_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
      <div class="pr-3">
        <% if current_page?(:controller => 'cookbooks') %>
          <div class="text-gray-300 font-semibold">Cookbooks</div>
        <% else %>
          <%= link_to 'Cookbooks', cookbooks_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
<!--      <div class="pr-3">-->
        <%# if current_page?(:controller => 'chefs') %>
<!--          <div class="text-gray-300 font-semibold">Chefs</div>-->
        <%# else %>
          <%#= link_to 'Chefs', users_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <%# end %>
<!--      </div>-->
    </div>
  </div>
  <% if controller_name.capitalize  == 'Discover' %>
    <div id="search_bar" class="">
      <div
        data-controller='modal'
        data-modal-target='wrapper'
        data-action='keydown@window->modal#closeWithKeyboard'
        data-modal-turbo-value="true"
        data-modal-url-value='/search'
        class="w-full flex"
      >
        <button data-action='modal#view' class="rounded-lg p-2 md:p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-lg hover:border-blue-800 hover:text-blue-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
  <% if controller_name.capitalize  == 'Recipes' %>
    <%= link_to new_recipe_path do %>
      <button class="rounded-lg p-2 md:p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-lg hover:border-blue-800 hover:text-blue-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </button>
    <% end %>
  <% end %>
  <% if controller_name.capitalize  == 'Cookbooks' %>
    <%= link_to new_cookbook_path do %>
      <button class="rounded-lg p-2 md:p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-lg hover:border-blue-800 hover:text-blue-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </button>
    <% end %>
  <% end %>
  <% if controller_name.capitalize  == 'Chefs' %>
    <%= link_to '#' do %>
      <button class="rounded-lg p-2 md:p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-lg hover:border-blue-800 hover:text-blue-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </button>
    <% end %>
  <% end %>
</div>

