<div class="mx-auto w-full">

  <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1">My Cookbooks</h1>
  <% unless @cookbooks.present? %>
    <%= link_to 'Create your first Cookbook!', new_cookbook_path, class: "rounded-lg p-24 text-center font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 m-4" %>
  <% end %>
  <%= render 'shared/collection', items: @cookbooks, horizontal: true %>

  <h1 class="font-extrabold text-4xl md:text-5xl text-gray-800 mb-1 mt-12">Saved Cookbooks</h1>
  <%= turbo_frame_tag 'collection', src: paginated_collection_path(source: 'saved_cookbooks', link: true) do %>
  <% end %>

</div>