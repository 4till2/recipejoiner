<div class="mx-auto  w-full flex">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%#= render 'shared/navbar', title: 'Cookbooks' %>

    <% unless @cookbooks.present? %>
      <%= link_to 'Create your first Cookbook!', new_cookbook_path, class: "col-span-3 rounded-lg p-24 text-center font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 m-4" %>
    <% end %>

    <div class="text-4xl p-2 ml-2 font-semibold mt-16">My Cookbooks</div>
    <%= render 'shared/collection', items: @cookbooks %>

    <div class="text-4xl p-2 ml-2 font-semibold mt-16">Saved Cookbooks</div>
    <%= turbo_frame_tag 'collection', src: paginated_collection_path(source: 'saved_cookbooks', link: true) do %>
    <% end %>
  </div>
</div>