<%= turbo_frame_tag 'join_button' do %>
  <div class="flex items-center justify-between ml-2">

    <% if (recipe ||= nil || cookbook ||= nil) && recipe&.id && cookbook&.id %>
      <div class="border rounded-lg">
        <%= button_to join_cookbook_recipe_path(recipe_id: recipe.id, cookbook_id: cookbook.id), class: 'flex' do %>
          <% if cookbook.recipes.exists?(recipe.id) %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-300 hover:text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
            </svg>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-500 hover:text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>